<div class="system-message success">
  <%= form_tag unfollow_user_path(@user), :id => 'undo' %>
  <% @twitter_users.each do |user| -%>
    <% if @followed_users.include? user[:screen_name] -%>
      <!-- did not add entry for <%= user[:screen_name] %> -->
    <% else -%>
      <input type="hidden" value="user_<%= user[:screen_name] %>" value="1" />
    <% end -%>
  <% end -%>
  <p><%= t("you_followed") %> <%= raw comma_seperated_usernames @followed_users %>. <%= raw t(:undo_or_dismiss_this, :undo_link => link_to(t(:undo_link_text), '', 'data-submit' => 'undo'), :dismiss_link => link_to(t(:dismiss_link_text), '', :'data-destroy' => "system-message.success")) %></p>
  </form>
</div>
