<!DOCTYPE html>
<html>
<head>
  <title><%= [yield(:title), t(:site_name)].reject(&:blank?).join(' - ') %></title>
  <%= stylesheet_link_tag :all %>
  <%= yield :css %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'form' %>
  <%= yield :js %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="wrap">
    <%= yield :before_header %>
    <div id="head">
      <h2><%= link_to t(:site_name), root_url, :id => 'home' %></h2>
      <%= yield :header %>
      <% if @current_user -%>
        <%= render 'users/current_user' %>
      <% end -%>
    </div> <!-- /head -->
    <% if !params[:unfollow].nil? -%>
        <%= render :partial => 'unfollow_confirmation' %>
    <% end -%>
    <% if !params[:follow].nil? -%>
        <%= render :partial => 'follow_confirmation' %>
    <% end -%>
    <%= yield %>
      <%= form_tag search_path, :id => 'search' do -%>
        <input type="text" name="query" />
        <input type="submit" name="submit-search" value="Search" />
      </form>
      <% end -%>
  </div> <!-- /wrap -->
  <%= yield :inline_js %>
</body>
</html>
