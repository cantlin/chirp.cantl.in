<!DOCTYPE html>
<html>
<head>
<title><%= "#{yield(:title) - " unless yield(:title).empty? %><%=t :site_name %></title>
<%= stylesheet_link_tag :all %>
<%= yield :css %>
<%= javascript_include_tag :defaults %>
<%= yield :js %>
<%= csrf_meta_tag %>
</head>
<body>
<div id="wrap">
<% flash.each do |key, value| %>
<div class="flash <%= key %>"><%= value %></div>
<% end %>
<%= yield %>
</div>
<%= yield :inline_js %></body>
</html>
