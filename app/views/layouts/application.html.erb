<!DOCTYPE html>
<html>
<head>
<title><%= [yield(:title), t(:site_name)].reject(&:blank?).join(' - ') %></title>
<!-- <title><%= "#{yield(:title)} - " unless yield(:title).empty? %><%=t :site_name %></title> -->
<%= stylesheet_link_tag :all %>
<%= yield :css %>
<%= javascript_include_tag :defaults %>
<%= yield :js %>
<%= csrf_meta_tag %>
</head>
<body>
<div id="wrap">
<%= yield :before_header %>
<div id="head">
<%= yield :header %>
<h2><%= link_to t(:site_name), root_url, :id => 'home' %></h2>
</div>
<% flash.each do |key, value| %>
<div class="flash <%= key %>"><%= value %></div>
<% end %>
<%= yield %>
</div>
<%= yield :inline_js %></body>
</html>
